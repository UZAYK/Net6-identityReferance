@model CourseModel
@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-lg-12 mx-auto">
            <div class="mb-4 w-100 w-md-50 w-lg-25">
            </div>
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2 bg-transparentm">
                <div class="bg-gradient-primary shadow-primary border-radius-lg p-3">
                    <h3 class="text-white text-primary mb-0">
                        <i class="fa-solid fa-graduation-cap"></i>
                        Course Create
                    </h3>
                </div>

                <div class="position-relative border-radius-xl overflow-hidden shadow-xl mb-7">
                    <div class="container border-bottom">
                        <div class="row mx-5 my-5">
                            <div class="w-100">
                                <div class="p-3 mb-2">
                                    <form asp-action="Create">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="input-group input-group-outline my-3">

                                                    <label asp-for="CourseId"></label>
                                                    <input asp-for="CourseId" class="form-control" />
                                                    <span asp-validation-for="CourseId"></span>

                                                    <label asp-for="CourseName"></label>
                                                    <input asp-for="CourseName" class="form-control" />
                                                    <span asp-validation-for="CourseName"></span>

                                                </div>
                                            </div>
                                            <div class="form-group d-flex justify-content-end mt-3">
                                                <input type="submit" value="Create" class="btn btn-primary float-right" />
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
