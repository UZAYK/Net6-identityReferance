@model List<CourseModel>
@{
    ViewData["Title"] = "Student List";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-lg-12 mx-auto">
            <div class="mb-4 w-100 w-md-50 w-lg-25">
            </div>
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2 bg-transparentm">
                <div class="bg-gradient-primary shadow-primary border-radius-lg p-3">
                    <h3 class="text-white text-primary mb-0">
                        <i class="fa-solid fa-bars-staggered"></i>
                        Course List
                    </h3>
                </div>

                <div class="position-relative border-radius-xl overflow-hidden shadow-xl mb-7">
                    <div class="container border-bottom">
                        <div class="row mx-5 my-5">
                            <a asp-action="Create" asp-controller="Course" class="btn btn-outline-dark d-flex justify-content-end">
                                <i class="fa-solid fa-plus"></i>
                                Create
                            </a>
                            <div class="w-100">
                                <table id="userListTable" class="table table-striped table-bordered" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Name</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td scope="row">@item.CourseId</td>
                                                <td scope="row">@item.CourseName</td>

                                                <td>
                                                    <a asp-action="Update" asp-controller="Course"
                                                   asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                                        <i class="fa-solid fa-pencil"></i> Edit
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://cdn.datatables.net/1.11.3/js/dataTables.bootstrap5.min.js"></script>
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
<script>
       $(document).ready(function () {
        $('#userListTable').DataTable();
    });
</script>